{% extends 'base.html.twig' %}

{% block title %}Users index{% endblock %}

{% block body %}
<div class="container">

    <h1 style="text-align:center">Users index <a href="{{ path('app_users_new') }}"><button type="button" class="btn btn-primary">+</button></a></h1>
<br><br>
    <table class="table">
        <thead>
            <tr style="text-align:center;">
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
